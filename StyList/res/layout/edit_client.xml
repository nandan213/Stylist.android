<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/editclientHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Edit Client"
        android:textColor="#FFBF00"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editclientDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editclientHeaderText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="Add and edit your client profile"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/editClientDetailLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editclientDetailText"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/clientFirstName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="First Name" />

        <EditText
            android:id="@+id/clientLatName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname" />

        <EditText
            android:id="@+id/ClientPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Phone" />
    </LinearLayout>

    <Button
        android:id="@+id/editclientSave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save" />

</RelativeLayout>